{
    "compilerOptions": {
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "module": "esnext",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "typeRoots": [
        "./src/typings",
        "./node_modules/@types"
      ],
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false
    },
    "include": [
      "src/index.tsx", "src/index.html"
    ],
    "exclude": [
      "node_modules",
      "typings"
    ]
}
